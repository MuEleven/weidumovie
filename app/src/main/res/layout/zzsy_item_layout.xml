<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/filmbackgroundcolor"
    android:layout_marginRight="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        app:failureImage="@drawable/cuoweitu"
        app:placeholderImage="@drawable/zhanweitu2"
        app:roundedCornerRadius="@dimen/dp_5" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignBottom="@id/simpleDraweeView"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无双"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/score"
        />
    <Button
        android:id="@+id/but"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:text="购买"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_bj"
        android:layout_below="@+id/name"
        />
</RelativeLayout>