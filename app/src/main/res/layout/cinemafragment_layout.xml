<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/filmbackgroundcolor"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_margin="@dimen/dp_26">

        <ImageView
            android:id="@+id/movie_dingwei"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/dingwei" />

        <TextView
            android:layout_toRightOf="@+id/movie_dingwei"
            android:id="@+id/movie_chengshi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="未定位"/>

        <ImageView
            android:id="@+id/movie_sousuo"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/sousuo" />

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/filmbackground"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        />


</LinearLayout>