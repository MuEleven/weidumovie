<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_98"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_24"
        >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_108"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上映时间"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:textColor="#fff"
        />
        <TextView
            android:id="@+id/xiangkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/data"
            android:text="想看"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            />
    <Button
        android:id="@+id/but"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:text="预约"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/button_bj"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/rela"
        android:background="#141931"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:roundedCornerRadius="@dimen/dp_5"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_108"
        app:failureImage="@drawable/cuoweitu"
        app:placeholderImage="@drawable/zhanweitu2"
        app:actualImageScaleType="centerCrop"
        />

</RelativeLayout>
