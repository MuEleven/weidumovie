<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/filmbackgroundcolor"
    android:layout_marginRight="@dimen/dp_10">
    <!--热门电影多条目-->
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/movie_image"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            app:roundedCornerRadius="10dp" />

        <TextView
            android:id="@+id/movie_hotname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/movie_image"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="电影名称"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/movie_hotpingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/movie_image"
            android:layout_marginLeft="@dimen/dp_125"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="8.6分"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/movie_hotgoupiao"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_20"
            android:layout_alignBottom="@+id/movie_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/button_bj"
            android:text="购票"
            android:textColor="@android:color/white" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simpleDraweeView"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_130"
        app:failureImage="@drawable/cuoweitu"
        app:placeholderImage="@drawable/zhanweitu2"
        app:roundedCornerRadius="@dimen/dp_5" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignBottom="@id/simpleDraweeView"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无双"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/score"
        />
    <Button
        android:id="@+id/but"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:text="购买"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_bj"
        android:layout_below="@+id/name"
        /></RelativeLayout>
</RelativeLayout>